{
  "extends": ["stylelint-config-standard", "stylelint-config-recommended-vue"],
  "plugins": ["stylelint-order"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "variants",
          "screen",
          "theme",
          "utility",
          "custom-variant"
        ]
      }
    ],
    "function-no-unknown": [true, { "ignoreFunctions": ["theme"] }],
    "order/properties-alphabetical-order": true
  }
}
